<UserControl x:Class="FractalTerrain.Gui.AppleManViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             >
    <DockPanel>
        <ScrollBar Margin="2,2,2,0" x:Name="SizeScrollbar" DockPanel.Dock="Top" Orientation="Horizontal" Minimum="0" Maximum="100" Value = "{Binding  RelativeSource={RelativeSource  AncestorType=UserControl},Path=AppleManSize}" />
        <ScrollBar Margin="0,2,2,2" x:Name="YStartPosition" DockPanel.Dock="Right" Orientation="Vertical" Minimum="0" Maximum="100" Value = "{Binding  RelativeSource={RelativeSource  AncestorType=UserControl},Path=AppleManYStartPosition }" />
        <ScrollBar Margin="2,0,2,2" x:Name="XStartPosition" DockPanel.Dock="Bottom" Orientation="Horizontal" Minimum="0" Maximum="100" Value = "{Binding  RelativeSource={RelativeSource  AncestorType=UserControl},Path=AppleManXStartPosition }" />
        <Image x:Name="AppleImage" />
    </DockPanel>
</UserControl>
