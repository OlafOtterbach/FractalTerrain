<Window x:Class="FractalTerrain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FractalTerrain"
        ContentRendered="OnContentRendered"
        Title="MainWindow"  WindowState="Maximized">
    <Grid Grid.IsSharedSizeScope="true">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="canvas" Grid.RowSpan="2" Grid.ColumnSpan="2" Grid.Row="0" Grid.Column="0" Background="Black" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
        </Canvas>
        <Expander Grid.Row="1" Grid.Column="0" Foreground="Green" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" ExpandDirection="Right" Width="Auto" Height="Auto" Panel.ZIndex="1000" Header="Settings" >
            <Border Margin="4" BorderThickness="1" BorderBrush="#FF00FF00">
                <StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                        <ScrollBar Margin="2,2,2,0" x:Name="SizeScrollbar" Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Minimum="0" Maximum="100" Value = "{ Binding Path=AppleManSize }" />
                    <Border Margin="2" Grid.Row="1" Grid.Column="0" Width="256" Height="200" BorderThickness="1" BorderBrush="#FF00FF00">
                        <Image x:Name="AppleImage" Stretch="Fill"/>
                    </Border>
                        <ScrollBar Margin="0,2,2,2" x:Name="YStartPosition" Grid.Row="1" Grid.Column="1" Orientation="Vertical" Minimum="0" Maximum="100" Value = "{ Binding Path=AppleManYStartPosition }" />
                        <ScrollBar Margin="2,0,2,2" x:Name="XStartPosition" Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Minimum="0" Maximum="100" Value = "{ Binding Path=AppleManXStartPosition }" />
                </Grid>
                    <Button Background="Black" Foreground="Green" BorderBrush="Green" Command="{Binding Path=Start}">Start</Button>
                </StackPanel>
            </Border>
        </Expander>
    </Grid>
</Window>
